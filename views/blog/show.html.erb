<% post = YAML.load(File.open("app/blog_posts/#{@params[:post]}.yml"))%>
<div id="blog">
	<div class="post">
		<div class="details">
			<b><%= link_to "Blog", "/blog" %></b>
		</div>
		<div class="body">
			<p>This is the blog of <%= link_to "Adam Laycock", "/" %>, an IT Engineer &amp; Web Developer from the North West of England.</p>
		</div>
	</div>
	
	<div class="post">
		<div class="details">
			<p>
				<b><%= post["title"] %></b><br />
				<%= post["date"]%>
			</p>
		</div>
		<div class="body">
			<p><%= post["body"].markabb %></p>
		</div>
	</div>
</div>